<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/data_form_group_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/data_form_group_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/data_form_editor_header_text_size"
            android:layout_marginLeft="@dimen/data_form_editor_margin_horizontal"
            android:layout_marginRight="@dimen/data_form_editor_margin_horizontal"
            android:paddingLeft="@dimen/data_form_editor_padding_horizontal"
            android:paddingRight="@dimen/data_form_editor_padding_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:fontFamily="sans-serif-medium" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/data_form_editor_group_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>