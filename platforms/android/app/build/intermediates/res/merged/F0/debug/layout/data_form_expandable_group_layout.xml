<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/data_form_group_header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/data_form_editor_margin_horizontal"
            android:layout_marginRight="@dimen/data_form_editor_margin_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="4dp"
                android:paddingRight="28dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/data_form_group_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/data_form_expandable_group_expand_button"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_collapse_dataform_group"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/data_form_editor_group_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>