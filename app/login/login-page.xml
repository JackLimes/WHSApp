<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    navigatedTo="onNavigatedTo"
    xmlns:nsDrawer="nativescript-pro-ui/sidedrawer"
    xmlns:drawer="shared/drawer"
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <ActionItem icon="res://navigation/menu" 
            android:visibility="collapsed" 
            tap="onDrawerButtonTap"
            ios.position="left">
        </ActionItem>
        <Label class="action-bar-title" text="Login"></Label>
    </ActionBar>
    <StackLayout id="mainStack" backgroundColor = "#202020">
        <Image class="logo" src="res://logo"/>
        <Image class="signin" src="~/images/google_sign_in.png" tap="authentificate"/>        
    </StackLayout>
</Page>
